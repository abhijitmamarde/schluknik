#:import sys sys
#:import MapSource mapview.MapSource
#:import MapMarkerPopup mapview.MapMarkerPopup


## inheried classes
<MyBoxLayout@BoxLayout>:
    orientation: 'vertical'
    padding: 50,50,10,10
    spacing: 10

# header text
# todo: make text bubble
<Seperator@Widget>:
	id: separator
	size_hint_y: None
	height: 1
	canvas:
		Color:
			rgb: 0.5, 0.5, 0.5
		Rectangle:
			pos: 25, separator.center_y
			size: separator.width - 50, 1

<Spacer@Widget>:
	id: separator
	size_hint_y: None
	height: 10
	canvas:
		Color:
			rgb: 1, 1, 1
		Rectangle:
			pos: 25, separator.center_y
			size: separator.width - 50, 1

<HeaderLabel@Label>:
    color: 0,0,0,1
    text_size: root.width, None
    size: self.texture_size
    font_size: 50
	font_name: 'RobotoCondensed'
    halign: 'left'
    valign: 'middle'

# header image
<HeaderImage@Image>
	source: 'pics/app/schluknik_logo_pirate.png'
	allow_stretch: False
    keep_ratio: True
	height: "40dp"
    size_hint_y: 3
    size_hint_x: None
	mipmap: True

# botton navigation panel
<ExitButton@Button>:
    background_normal: str(False)
    on_press: app.get_running_app().stop()
    #background_down: 'pics/app/exit.png'
    Image:
        source: 'pics/app/exit.png'
        y: self.parent.y + 10
        x: self.parent.x + 120
        size: 80,80
        allow_stretch: False
        mipmap: True

<SettingsButton@Button>:
    background_normal: str(False)
    on_press: app.open_settings()
    #background_down: 'pics/app/settings.png'
    Image:
        source: 'pics/app/settings.png'
        y: self.parent.y  + 10
        x: self.parent.x + 120
        size: 80,80
        allow_stretch: False
        stretch: False
        mipmap: True

<NextButton@Button>:
    background_normal: str(False)
    #background_down: 'pics/app/next.png'
    Image:
        source: 'pics/app/next.png'
        y: self.parent.y + 10
        x: self.parent.x + 120
        size: 80,80
        allow_stretch: False
        stretch: False
        mipmap: True

<Sliderlein@Slider>:
    canvas:
        Rectangle:
            pos: (self.value_pos[0] - 19, self.center_y - 17) if self.orientation == 'horizontal' else (self.center_x - 16, self.value_pos[1] - 16)
            size: (55, 55)
            source: 'pics/app/beer_round.png'


<Sliderlein2@Slider>:
    canvas:
        Color:
            rgb: 1,0,0
        Rectangle:
            pos: (self.value_pos[0] - 19, self.center_y - 17) if self.orientation == 'horizontal' else (self.center_x - 16, self.value_pos[1] - 16)
            size: (55, 55)
            source: 'slider_cursor.png'

<Sliderlein3@Slider>:
    canvas:
        Color:
            rgb: 0,1,0
        Rectangle:
            pos: (self.value_pos[0] - 19, self.center_y - 17) if self.orientation == 'horizontal' else (self.center_x - 16, self.value_pos[1] - 16)
            size: (55, 55)
            source: 'slider_cursor.png'

################################################################################################
# map of schlukniks

<MapScreen>:
    MapView:
        id: map
        lat: app.lat
        lon: app.lon
        zoom: 13
        map_source: MapSource(sys.argv[1], attribution="") if len(sys.argv) > 1 else "osm"

    # Navigation Bar
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        size_hint: .2, .2
        GridLayout:
            cols: 2
            rows: 1
            Button:
                text: '<'
                on_press: root.manager.current = 'result'
            Button:
                text: 'exit'
                on_press: app.get_running_app().stop()

################################################################################################
# hangover transient screen
# add meaningul computation depending on the input variables

<GraphScreen>:
    grid: Grid

	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'top'
		GridLayout:
			cols: 2
			rows: 1
			size_hint: .1, .1
			Button:
				text: '<'
				on_press: root.manager.current = 'result'
			Button:
				text: 'exit'
				on_press: app.get_running_app().stop()

	# graphs
	GridLayout:
		padding: 50,0,50,50
		spacing: 10
		size_hint: 1, 1
		id:Grid
		cols: 1
		rows: 5
		# Navigation Bar
		HeaderLabel:
			size_hint: .1, .1
			id: alki_score

		